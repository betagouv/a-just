FROM cypress/base

COPY ./end-to-end /e2e
COPY ./end-to-end/scripts /scripts
WORKDIR /e2e


CMD ./scripts/wait-for-it.sh api:8081 --timeout=300 && \
     ./scripts/wait-for-it.sh front:4200 --timeout=300 && \ 
     npm install && npx cypress install && npm run cy:run:reports
