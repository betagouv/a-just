FROM cypress/base

COPY ./end-to-end /e2e
COPY ./end-to-end/scripts /scripts
WORKDIR /e2e


CMD ./scripts/wait-for-it.sh api:8081 --timeout=140 && \
     ./scripts/wait-for-it.sh front:4200 --timeout=140 && \
     ./scripts/wait-for-it.sh api_sandbox:8081 --timeout=140 && \
     ./scripts/wait-for-it.sh front_sandbox:4200 --timeout=140 && \
     yarn install && npx cypress install && yarn cy:run:report
# Utile pour debugguer et rentrer dans le conteneur si celui-ci n'est plus OK
#sleep infinity;
